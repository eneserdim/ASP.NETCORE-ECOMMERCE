@model IEnumerable<EEducation.Model.Entities.About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<!-- about us banner -->
<div class="contact_banner">
    <div class="cont_banner">
        <h1 class="title_2">Hakkımızda</h1>
        <div class="breadcrumbs">
            <a asp-action="Index" asp-controller="Home"><i class="las la-home"></i></a>
            <a asp-controller="About" asp-action="Index" class="active">Hakkımızda</a>
        </div>
    </div>
</div>

<!-- HAKKIMIZDA ALANI BAŞLANGIÇ -->
<div class="about_history section_padding">
    <div class="container">
        <div class="row">
            <!-- history left content  -->
            <div class="col-lg-6 col-xl-7">
                <div class="about_hiscont">
                    <h2 class="text_md text-color">HAKKIMIZDA</h2>
                    @foreach (var item in Model)
                    {
                        <h3 class="title_2 mb-3">@item.AboutTitle</h3>
                    }
                    @foreach (var item2 in Model)
                    {
                        <p class="mb-4">@Html.Raw(item2.AboutDescription)</p>
                    }

                    <div class="experiances d-flex pt-2">
                        <div class="single_exper">
                            <h4 class="h2 text-color mb-1">40</h4>
                            <p class="mb-0">Yılı Aşkın Deneyim</p>
                        </div>
                        <div class="single_exper ms-3 ms-xl-5">
                            <h4 class="h2 text-color mb-1">20 Bin</h4>
                            <p class="mb-0">Mutlu Müşteri</p>
                        </div>
                        <div class="single_exper ms-3 ms-xl-5">
                            <h4 class="h2 text-color mb-1">100%</h4>
                            <p class="mb-0">Müşteri Memnuniyeti</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- history right image  -->
            <div class="col-lg-6 col-xl-5 mt-4 mt-lg-0">
                <div class="about_imgs">
                    @foreach (var photo in Model)
                    {
                        <img loading="lazy" src="~/images/@photo.AboutPhoto" class="w-100">
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- HAKKIMIZDA ALANI BİTİŞ -->

<!-- about vision -->
<div class="about_vision section_padding_b">
    <div class="container">
        <div class="row flex-column-reverse flex-lg-row">
            <!-- vision left image  -->
            <div class="col-xl-5 col-lg-6 mt-4 mt-lg-0">
                <div class="about_imgs">
                    <img loading="lazy" src="~/images/about-img-2.jpg" class="w-100">
                </div>
            </div>
            <!-- vision right content  -->
            <div class="col-xl-7 col-lg-6 ">
                <div class="about_hiscont ps-xl-2">
                    <h2 class="text_md text-color">OUR VISION</h2>
                    <h3 class="title_2 mb-3">
                        Our vision is simple - We exist to <br class="d-none d-xl-block">
                        accelerate our customers’ progress
                    </h3>
                    <p class="mb-4">
                        we design and deliver our customers’ digital transformation by bringing together their
                        vision with our industry knowledge and deep technological expertise. we design and deliver
                        our customers’ digital transformation
                    </p>
                    <div class="vision_check pt-2">
                        <p class="mb-2">
                            <span class="text-color me-2">
                                <i class="lar la-thumbs-up"></i>
                            </span>
                            We build strong relationships
                        </p>
                        <p class="mb-2">
                            <span class="text-color me-2">
                                <i class="lar la-thumbs-up"></i>
                            </span>
                            We encourage initiative and provide opportunity
                        </p>
                        <p class="mb-2">
                            <span class="text-color me-2">
                                <i class="lar la-thumbs-up"></i>
                            </span>
                            We embrace change and creativity
                        </p>
                        <p class="mb-2">
                            <span class="text-color me-2">
                                <i class="lar la-thumbs-up"></i>
                            </span>
                            We champion an environment of honesty
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- EKİBİMİZ BAŞLANGIÇ -->
<div class="about_team section_padding_b">
    <div class="container">
        <h3 class="title_2 mb-4 text-center">Ekibimiz</h3>
        <div class="team_slider slider-m-margin">
            @foreach (var item in ViewBag.TeamList)
            {
                <div class="single_team slider-margin">
                    <div class="team_img">
                        <img loading="lazy" src="/images/@item.PersonalImage" class="w-100" alt="team" style="width:272px !important; height:272px !important;">
                        <!-- team member social icons  -->
                        <div class="team_icons">
                            <a href="#" class="facebook"><i class="lab la-facebook-f"></i></a>
                            <a href="#" class="twitter"><i class="lab la-twitter"></i></a>
                            <a href="#" class="instagram"><i class="lab la-instagram"></i></a>
                        </div>
                    </div>
                    <div class="team_cont text-center">
                        <a href="#">
                            <h5>@item.FullName</h5>
                        </a>
                        <p class="text_sm">@item.PersonalTitle</p>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
<!-- EKİBİMİZ BİTİŞ -->


<!-- MARKALAR LİSTESİ -->
<div class="about_brand section_padding_b">
    <div class="container">
        <h2 class="title_2 mb-3 text-center"> Markalar & İş Ortaklarımız</h2>
        <!-- our all brands  -->
        <div class="brand_slider slider-m-margin">
            @foreach (var item in ViewBag.BrandList)
            {
                <div class="single_brand_slid text-center slider-margin">
                    <img loading="lazy" src="/images/@item.BrandLogo" alt="brand">
                </div>
            }


        </div>
    </div>
</div>
