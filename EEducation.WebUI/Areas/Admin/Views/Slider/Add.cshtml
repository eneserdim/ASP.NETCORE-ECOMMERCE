@model EEducation.Model.Entities.Slider

@{
    ViewData["Title"] = "Add";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<form asp-area="Admin" asp-controller="Slider" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <input type="text" class="form-control" name="SliderTitle" placeholder="Slider Başlığını Giriniz">
    </div>
    <div class="form-group mb-3">
        <input type="text" class="form-control" name="SliderDescription" placeholder="Slider Kısa Açıklaması">
    </div>
    <div class="form-group mb-3">
        <input type="text" class="form-control" name="ButtonName" placeholder="Buton Adını Giriniz">
    </div>

    <div class="form-group mb-3">
        <input type="text" class="form-control" name="ButtonUrl" placeholder="Buton Linkini Giriniz">
    </div>

    <div class="custom-file-container" data-upload-id="myFirstImage">
        <label>Upload (Single File) <a href="javascript:void(0)" class="custom-file-container__image-clear" title="Clear Image">x</a></label>
        <label class="custom-file-container__custom-file">
            <input type="file" name="file" class="custom-file-container__custom-file__custom-file-input" accept="image/*">
            <input type="hidden" name="MAX_FILE_SIZE" value="10485760" />
            <span class="custom-file-container__custom-file__custom-file-control"></span>
        </label>
        <div class="custom-file-container__image-preview"></div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>


