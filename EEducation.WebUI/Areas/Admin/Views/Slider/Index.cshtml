@model IEnumerable<EEducation.Model.Entities.Slider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}





<div class="seperator-header">
    <a asp-area="Admin" asp-controller="Slider" asp-action="Add" class="btn btn-success">Yeni Slier EKLE</a>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card component-card_9" style="max-width:300px;max-height:240px; margin-left:20px; margin-top:20px;">


                <img src="~/images/@item.SliderImage" class="card-img-top" alt="widget-card-2" style="max-width:300px;max-height:240px;">
                <div class="card-body">

                    <div class="meta-info">

                        <div class="meta-action">
                            <a asp-area="Admin" asp-controller="Slider" asp-action="Update" asp-route-id="@item.ID" class="btn btn-warning mb-2 mr-2">Güncelle</a>
                            <a asp-area="Admin" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger mb-2 mr-2">Sil</a>
                        </div>

                    </div>

                </div>

            </div>
        }
    </div>
</div>




