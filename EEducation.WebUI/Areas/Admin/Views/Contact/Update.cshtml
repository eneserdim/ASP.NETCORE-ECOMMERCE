@model EEducation.Model.Entities.Contact
@{
    ViewData["Title"] = "Update";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Adres Güncelle</h1>

@if (ViewBag.CategoryUpdateError != null)
{
    <div class="alert alert-danger">
        @ViewBag.CategoryUpdateError
    </div>
}

<br />

<form asp-area="Admin" asp-controller="Contact" asp-action="Update" method="post" enctype="multipart/form-data">

    <div class="form-group mb-3">
        <input type="hidden" class="form-control" name="ID" value="@Model.ID" placeholder="@Model.ID">
    </div>


    <div class="form-group mb-3">
        <input type="text" class="form-control" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="@Model.PhoneNumber">
    </div>

    <div class="form-group mb-3">
        <input type="text" class="form-control" name="Mail" value="@Model.Mail" placeholder="@Model.Mail">
    </div>

    <div class="form-group mb-3">
        <textarea placeholder="Ürün Kısa Açıklaması" name="Adress" value="@Model.Adress" style="width:-webkit-fill-available;">@Model.Adress</textarea>
    </div>




    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>


