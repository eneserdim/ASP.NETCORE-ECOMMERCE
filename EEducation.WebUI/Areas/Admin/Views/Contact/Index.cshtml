@model IEnumerable<EEducation.Model.Entities.Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}


@if (Model.Count() == 0)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorContact
    </div>
}
else
{
    <div class="row layout-spacing">
        <div class="col-lg-12">
            <div class="statbox widget box box-shadow">
                <div class="widget-content widget-content-area">
                    <table id="style-3" class="table style-3  table-hover">
                        <thead>
                            <tr>
                                <th>Adres</th>
                                <th>iletişim Numarası</th>
                                <th>Mail Adresi</th>
                                <th class="text-center dt-no-sorting">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="checkbox-column text-center"> @item.Adress </td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Mail</td>
                                    <td class="text-center">
                                        <ul class="table-controls">
                                            <li><a asp-area="Admin" asp-controller="Contact" asp-action="Update" asp-route-id="@item.ID" class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="Güncelle"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 p-1 br-6 mb-1"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a></li>
                                        </ul>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}


