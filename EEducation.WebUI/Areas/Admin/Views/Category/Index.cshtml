@model IEnumerable<EEducation.Model.Entities.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}




<div class="seperator-header">
    <a asp-area="Admin" asp-controller="Category" asp-action="Add" class="btn btn-success">Yeni Kategori EKLE</a>
</div>
@if (Model.Count() == 0)
{
    <div class="alert alert-danger">
        Kayıt Bulunamadı..!
    </div>
}
else
{
    <div class="row layout-spacing">
        <div class="col-lg-12">
            <div class="statbox widget box box-shadow">
                <div class="widget-content widget-content-area">
                    <table id="style-3" class="table style-3  table-hover">
                        <thead>
                            <tr>
                                <th class="checkbox-column text-center"> Kategori ID </th>
                                <th class="text-center">Kategori İkon Resmi</th>
                                <th>Kategori Adı</th>
                                <th>Alt Kategoriler</th>
                                <th class="text-center dt-no-sorting">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="checkbox-column text-center"> @item.ID </td>
                                    <td class="text-center">
                                        @if (item.CategoryIcon == null)
                                        {
                                            <span><img src="~/themes/compact-menu/assets/img/90x90.jpg" class="profile-img" alt="avatar"></span>
                                        }
                                        else
                                        {
                                            <span><img src="~/images/@item.CategoryIcon" class="profile-img" alt="avatar" style="max-width:64px;max-height:64px;"></span>
                                        }
                            
                                    </td>
                                    <td>@item.CategoryName</td>
                                    <td><span class="shadow-none badge badge-primary">Alt Kategori Sayısı (*)</span></td>
                                    <td class="text-center">
                                        <ul class="table-controls">
                                            <li><a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@item.ID" class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="Güncelle"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 p-1 br-6 mb-1"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a></li>
                                            <li><a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.ID" class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="Sil"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash p-1 br-6 mb-1"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg></a></li>
                                        </ul>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}





